<h1><div class="text-center text-white">Recent Posts</div></h1>
<br>
<div class="container">
  <div class="row row-cols-3 row-cols-md-3 g-4">
    <% @skins.each do |post| %>
      <div class="col">
        <div class="card" style="width: 360px">
          <%= link_to post, class: 'thumbnail' do %>
            <img src="<%= post.photo_url(:thumb) %>" class="card-img-top ">
            <div class="card-body">
              <h5 class="card-title"><%= post.name %></h5>
              <div class="description">
                <p><%= post.description %></p>
              </div>
              <a href="#" class="btn btn-secondary border-white bg-white dl-btn">Download</a>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
