<h1>Recent Posts</h1>
<div class="row">
  <% @skins.each do |post| %>
      <div class="col-sm-4 col-md-3">
        <%= link_to post, class: 'thumbnail' do %>
          <%= image_tag post.photo_url(:thumb) %>
          <div class="caption">
            <h3><%= post.name %></h3>
            <p>Photo by <%= post.user.email %></p>
          </div>
        <% end %>
      </div>
  <% end %>
</div>