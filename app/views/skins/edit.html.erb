<div class="main text-white">
<%= form_with model: @skins do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @skins.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
    <% @skins.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  
  <div>
    <%= form.label :photo %><br>
    <%= form.file_field :photo %>
  </div>
  <br>

  <div>
    <%= form.submit %>
  </div>
<% end %>
</div>