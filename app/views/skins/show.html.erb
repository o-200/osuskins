<div class="content">
  <div class="name text-white">
    <div class="container h2">
      <%= @skins.name %>
    </div>
  </div>
  <div class="container">
    <div class="row">
        <div class="col-sm">
          <%= image_tag @skins.photo_url, class: 'img-responsive', width: '720' %>
        </div>
        <div class="col-sm h4 text-light">
          <div class="desc">
            <p><%= @skins.description %></p>
            <p><%= button_to @skins.file.filename, url_for(@skins.file), class:"btn btn-secondary border-white bg-white dl-btn message-file" %>
          </div>
          <div class="admin">
            <% if user_signed_in? %>
              <p><%= link_to "Edit", edit_skin_path(@skins) %></p>
              <p><%= button_to "Destroy", @skins , method: :delete, data: { confirm: 'Are you sure?' } %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</div>


